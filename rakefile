require 'rake/clean'
require 'rubygems'
require 'fruit_processor'

include Rake::DSL if defined?(Rake::DSL)

$base_dir=Dir.pwd
$build_dir = "#{$base_dir}/build"

task :default => [:anchor_root, :dirs, :compile, :test, :sample]

CLEAN.include(FileList['**/*.o', '**/*.mod', '**/*.a', '**/*_gen.f90', '**/*fruit_driver' ])
CLOBBER.include($build_dir)

task :compile do
  sh 'cd src;rake'
end

task :test => :compile do
  sh 'cd test;rake;'
  driver_programs = FileList["#{$build_dir}/fruit_driver"]
  driver_programs.each do |driver|
    sh "\"#{driver}\""
  end
end

task :sample => :compile do
  sh 'cd sample;rake;'
  sh "cd \"#{$build_dir}\";./fruit_driver"
end

load 'rake_base.rb'
include RakeBase
