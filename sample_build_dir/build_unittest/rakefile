
require 'rubygems'
require 'fruit_processor'
require 'rake/clean'

include Rake::DSL if defined?(Rake::DSL)

$build_dir = "./"
$source_dirs = ["../", "../../src/"]
$goal = 'fruit_driver.exe'
$main = 'fruit_driver_gen.f90'

CLEAN.include(FileList[
  'fruit_driver_gen.f90',
  'fruit_basket_gen.f90', 
  '*.mod', '*.o', $goal
])

fp = FruitProcessor.new
## fp.process_only = FileList[""] #only files here are processed.
fp.pre_process($source_dirs)

load "../../rake_estimate.rb"
load "../../rake_base.rb"


task :default => :test

task :test => $goal do
  sh "./#{$goal}"
end


