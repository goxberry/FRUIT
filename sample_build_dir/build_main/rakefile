require 'rake/clean'

include Rake::DSL if defined?(Rake::DSL)

CLEAN.include(FileList['main.exe'])

task :default => [
  :run_main
]

desc "main executable"
file 'main.exe' => ["../main.f90", "../atoz.f90"] do
  sh "#{$compiler} ../atoz.f90 ../main.f90 -o main.exe"
end

task :run_main => "main.exe" do
  sh './main.exe'
end

load "../../rake_base.rb"
